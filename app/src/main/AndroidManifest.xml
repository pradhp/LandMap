<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lm.pkp.com.landmap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".custom.LandmapApplication"
        android:largeHeap="true"
        android:allowClearUserData="true">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAGQItIMMsVu8kjvrU1KCR-zm1Xfdcxgnw" />

        <activity
            android:name=".google.signin.SignInActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AreaDashboardActivity"
            android:label="@string/title_activity_area_dashboard"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".AreaDetailsActivity"
            android:label="@string/title_activity_position_marker"></activity>
        <activity
            android:name=".AreaMapPlotterActivity"
            android:label="@string/title_activity_land_plotter"></activity>
        <activity
            android:name=".AreaEditActivity"
            android:label="@string/title_activity_area_edit"></activity>
        <activity
            android:name=".AreaShareActivity"
            android:label="@string/label_share_area"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/label_pre_load_splash"></activity>
        <activity
            android:name=".AreaCameraPictureActivity"
            android:screenOrientation="portrait"
            android:label="@string/area_add_image"></activity>
        <activity
            android:name=".AreaCameraVideoActivity"
            android:screenOrientation="portrait"
            android:label="@string/area_add_video"></activity>
        <activity
            android:name=".AreaDocumentChooserActivity"
            android:screenOrientation="portrait"
            android:label="@string/choose_document"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".AreaAddResourcesActivity"
            android:label="@string/area_add_resources"></activity>
        <activity
            android:name=".UploadResourcesActivity"
            android:label="@string/choose_document"></activity>
        <activity
            android:name=".DownloadDriveResourcesActivity"
            android:label="@string/area_resources"></activity>
        <activity
            android:name=".RemoveDriveResourcesActivity"
            android:label="@string/area_resources"></activity>
        <activity
            android:name=".ShareDriveResourcesActivity"
            android:label="@string/choose_document"></activity>
        <activity
            android:name=".AreaResourceDisplayActivity"
            android:label="@string/area_resources"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".CreateCommonFolderStructureActivity"
            android:label="@string/choose_document"></activity>
        <activity
            android:name=".CreateAreaFolderStructureActivity"
            android:label="@string/choose_document"></activity>
    </application>
</manifest>
