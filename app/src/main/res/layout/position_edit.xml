<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/position_edit_layout_root"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:text="Name "
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                android:background="@drawable/edit_box"
                android:id="@+id/position_name"
                android:padding="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:text="Type "
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <Spinner
                android:id="@+id/position_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#E3BB45"
                android:entries="@array/position_types"
                android:popupBackground="#E3BB45"
                android:gravity="left"
                android:layout_weight="0.4"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:text="Description "
                android:gravity="left|center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="4"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                android:layout_weight="0.4"
                android:id="@+id/position_desc"
                android:background="@drawable/edit_box"
                android:padding="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
