<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:weightSum="6">

    <ImageView
        android:id="@+id/action_mark_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/mark"
        android:layout_weight="1"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/action_plot_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/plot"
        android:layout_weight="1"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/action_navigate_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/navigate"
        android:layout_weight="1"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/action_share_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/share"
        android:layout_weight="1"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/action_drive_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/media"
        android:layout_weight="1"
        android:padding="5dp" />

    <ImageView
        android:id="@+id/action_display_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/window"
        android:layout_weight="1"
        android:padding="5dp" />

</LinearLayout>