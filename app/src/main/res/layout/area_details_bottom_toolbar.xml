<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:measureWithLargestChild="false"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="6dp">
        <ImageView
            android:id="@+id/action_mark_location"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/mark"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Mark"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="6dp">
        <ImageView
            android:layout_marginBottom="2dp"
            android:id="@+id/action_plot_area"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/plot"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Plot"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="6dp">
        <ImageView
            android:layout_marginBottom="2dp"
            android:id="@+id/action_navigate_area"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/navigate"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Navigate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="6dp">
        <ImageView
            android:layout_marginBottom="2dp"
            android:id="@+id/action_share_area"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/share"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Share"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="6dp">
        <ImageView
            android:layout_marginBottom="2dp"
            android:id="@+id/action_drive_area"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/media"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Media"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="3dp">
        <ImageView
            android:layout_marginBottom="2dp"
            android:id="@+id/action_display_res"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/window"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

</LinearLayout>