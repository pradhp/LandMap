<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dip"
    android:padding="5dip">

    <ImageView
        android:id="@+id/area_default_image"
        android:layout_width="128px"
        android:layout_height="128px"
        android:src="@drawable/map_gen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/area_name_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/area_default_image"
        android:textSize="16sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/area_desc_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/area_default_image"
        android:layout_below="@+id/area_name_text"
        android:textSize="13sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/area_tags_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/area_default_image"
        android:layout_below="@+id/area_desc_text"
        android:textSize="13sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        />

    <TextView
        android:id="@+id/area_measure_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/area_default_image"
        android:layout_below="@+id/area_tags_text"
        android:textSize="13sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        />


    <TextView
        android:id="@+id/area_creator_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/area_default_image"
        android:layout_below="@+id/area_measure_text"
        android:textSize="13sp"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"/>

</RelativeLayout>